@model UserDto
@{
    var name = Model.Surname + " " + Model.OtherNames;
    ViewData["Title"] = "User Profile - " + name;
    var roleList = "";
}

    <div class="row">

        <div class="col-lg-12">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">@name Profile</h1>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label asp-for="Surname" class="display-6 font-weight-bold">Surname</label>
                                        <p>@Model.Surname</p>

                                    </div>
                                    <div class="col-sm-6">
                                        <label asp-for="OtherNames" class="display-6 font-weight-bold">Other Names</label>
                                        <p>@Model.OtherNames</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <div class="form-group">
                                            <label asp-for="DepartmentName" class="display-6 font-weight-bold">Department</label>
                                            <p>@Model.DepartmentName</p>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="Roles" class="display-6 font-weight-bold">Roles</label>
                                            <p>

                                                @foreach (var role in Model.Roles)
                                                {
                                                    roleList += role + ", ";
                                                }
                                                @roleList
                                            </p>

                                        </div>
                                    </div>

                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label asp-for="Email" class="display-6 font-weight-bold">Email</label>
                                        <p>@Model.Email</p>
                                    </div>
                                </div>

                            </div>
                                <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-primary ml-3 mb-3">Go back</a>

                        </div>
                    </div>
                </div>
            </div>

            <partial name="_ChangePasswordPartial" model="@new ChangePasswordDto()"/>
        </div>
    </div>