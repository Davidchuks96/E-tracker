@model UserDto
@{
    ViewData["Title"] = "Reset Password";
    var roleList = "";
}
<div class="row">

    <div class="col-lg-12">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Reset Password</h1>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="Surname" class="display-6 font-weight-bold">Surname</label>
                                    <p>@Model.Surname</p>

                                </div>
                                <div class="col-sm-4">
                                    <label asp-for="OtherNames" class="display-6 font-weight-bold">Other Names</label>
                                    <p>@Model.OtherNames</p>
                                </div>
                                <div class="col-sm-4 mb-3 mb-sm-0" >
                                    <div class="form-group">
                                        <label asp-for="DepartmentName" class="display-6 font-weight-bold">Department</label>
                                        <p>@Model.DepartmentName</p>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">
                                    <label asp-for="Email" class="display-6 font-weight-bold">Email</label>
                                    <p>@Model.Email</p>
                                </div>

                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="Roles" class="display-6 font-weight-bold">Roles</label>
                                        <p>

                                            @foreach (var role in Model.Roles)
                                            {
                                                roleList += role + ", ";
                                            }
                                            @roleList
                                        </p>

                                    </div>
                                </div>

                            </div>
                            
                            <form class="user mt-4 col-6" asp-controller="User" asp-action="ResetPassword" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input name="newPassword" required type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="New Password">
                                    </div>
                                    <div class="col-sm-6">
                                        <input name="confirmPassword" required type="password" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Confirm Password">
                                    </div>
                                </div>
                                <input type="text" hidden name="userId" value="@Model.Id" />
                                <div class="form-row col-sm-12">
                                    <div class="col-sm-6">
                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Reset Password
                                        </button>
                                    </div>
                                    <div class="col-sm-6">
                                        <a asp-controller="User" asp-action="UserList" class="btn btn-danger btn-user btn-block">
                                            Cancel
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
