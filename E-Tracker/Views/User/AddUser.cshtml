@model CreateUserDto

@{
    ViewData["Title"] = "New User";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create User</h1>
                    </div>
                    <form class="user" asp-controller="User" asp-action="AddUser" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input asp-for="Surname" type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Surname">
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="OtherNames" type="text" class="form-control form-control-user" id="exampleLastName" placeholder="Other Names">
                                <span asp-validation-for="OtherNames" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email Address">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Html.DropDownList("departmentId", new SelectList((ViewBag.Departments), "Id", "Name"), "Select Department", new { Id = "departmentId", @class = "form-control" })
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input asp-for="Password" type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Create User
                        </button>
                        <hr>
                        <button type="reset" class="btn btn-danger btn-user btn-block">
                            Reset
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
