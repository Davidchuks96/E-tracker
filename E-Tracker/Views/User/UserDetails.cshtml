@model UserDto
@{
    var name = Model.Surname + " " + Model.OtherNames;
}

    <div class="row">

        <div class="col-lg-12">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">@name</h1>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label asp-for="Surname" class="display-6 font-weight-bold">Surname</label>
                                        <p>@Model.Surname</p>

                                    </div>
                                    <div class="col-sm-6">
                                        <label asp-for="OtherNames" class="display-6 font-weight-bold">Other Names</label>
                                        <p>@Model.OtherNames</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <div class="form-group">
                                            <label asp-for="Email" class="display-6 font-weight-bold">Email</label>
                                            <p>@Model.Email</p>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <div class="form-group">
                                            <label asp-for="Department" class="display-6 font-weight-bold">Department</label>
                                            <p>@Model.Department?.Name</p>
                                        </div>
                                    </div>

                                </div>
                                
                                <div class="form-group row">
                                    

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="Roles" class="display-6 font-weight-bold">Roles</label>
                                           
                                            <ul>
                                                @foreach (var role in Model.Roles)
                                                {
                                                    <li>@role</li>
                                                }
                                            </ul>
                                        </div>
                                    </div>

                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="DateCreated" class="display-6 font-weight-bold">Date Created</label>
                                            <p>
                                                @Model.DateCreated.ToShortDateString()
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="CreatedByFullName" class="display-6 font-weight-bold">Created By</label>
                                            <p>
                                                @Model.CreatedByFullName
                                            </p>
                                        </div>
                                    </div>

                                </div>
                                
                                <div class="form-group row">
                                   
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label asp-for="DeletedByFullName" class="display-6 font-weight-bold">Deactivated By</label>
                                        @if (Model.IsActive)
                                        {
                                            <p>User is still active</p>
                                        }
                                        else
                                        {
                                            <p>@Model.DeletedByFullName</p>
                                        }
                                    </div>

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <label asp-for="DateDeleted" class="display-6 font-weight-bold">Date Deactivated</label>
                                        @if (Model.IsActive)
                                        {
                                            <p>User is still active</p>
                                        }
                                        else
                                        {
                                            <p>@Model.DateDeleted.ToShortDateString()</p>
                                        }
                                    </div>
                                </div>

