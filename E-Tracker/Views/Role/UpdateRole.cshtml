@model RoleDto

@{
    ViewData["Title"] = "Update Role";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Update @Model.Name</h1>
                    </div>
                    <form class="user" asp-controller="Role" asp-action="UpdateRole" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input asp-for="Name" type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Surname">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>                            
                        </div>                        
                        <div class="form-row col-sm-12">
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Update Role
                                </button>
                            </div>
                            <div class="col-sm-4">
                                <a asp-controller="Role" asp-action="RoleList" class="btn btn-danger btn-user btn-block">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <br />
        <hr />

        <div>
            <h5>Role Permissions</h5>

            <div>
                @if (Model.Claims.Any())
                {
                    foreach (var claim in Model.Claims)
                    {
                        <p>@claim</p>
                    }
                }
                else
                {
                    <p>None at the moment</p>
                }
            </div>
            <div>
                <a asp-controller="Permission" asp-action="ManageRoleClaims" asp-route-userId="@Model.Id" class="btn btn-sm btn-primary">Manage Permissions</a>
            </div>
        </div>
    </div>
</div>
