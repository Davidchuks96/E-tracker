@model CreateItemGroupDto
@{
    var departments = ViewBag.Departments;
    var categories = ViewBag.Categories;
}
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create Item Group</h1>
                            </div>
                            <form class="user" asp-action="CreateItemGroup" asp-controller="ItemGroup" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Name" type="text" class="form-control form-control-user" id="Name" placeholder="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="TagNo" type="text" class="form-control form-control-user" id="TagNo" placeholder="Tag Number">
                                        <span asp-validation-for="TagNo" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.DropDownList("departmentId", new SelectList((departments), "Id", "Name"), "Select Department", new { Id = "departmentId", @class = "form-control" })
                                    @*<select asp-for="DepartmentId" asp-items="Model.Department" class="form-control-user"></select>
                                        <span asp-validation-for="DepartmentId" class="text-danger"></span>*@
                                </div>

                                <div class="form-group">
                                    @Html.DropDownList("categoryId", new SelectList((categories), "Id", "Name"), "Select Category", new { Id = "categoryId", @class = "form-control" })
                                    @*<select asp-for="DepartmentId" asp-items="Model.Department" class="form-control-user"></select>
                                        <span asp-validation-for="DepartmentId" class="text-danger"></span>*@
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Create ItemGroup
                                </button>

                                <a asp-action="AllItemGroupsCreatedByMyDepartment" asp-controller="ItemGroup" class="btn btn-primary btn-user btn-block">Cancel</a>
                                <hr>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

