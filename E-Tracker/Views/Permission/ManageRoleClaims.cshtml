@model E_Tracker.Dto.RoleClaimsDto

@{
    ViewData["Title"] = "Role Permissions";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Role Permissions</h1>
                    </div>
                    <form class="user" asp-controller="Permission" asp-action="ManageRoleClaims" method="post">
                        <input type="hidden" asp-for="@Model.RoleId" />
                        @for (int i = 0; i < Model.Claims.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model.Claims[i].ClaimType" class="form-control form-control-user">
                                <input type="hidden" asp-for="@Model.Claims[i].ClaimValue" class="form-control form-control-user">
                                <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                                    @Model.Claims[i].ClaimValue
                                </label>
                            </div>
                        }
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Update
                        </button>
                        <hr>
                        @if (Model.IsRoleActive)
                        {
                            <a asp-controller="Role" asp-action="RoleList" class="btn btn-danger btn-user btn-block">
                                Cancel
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Role" asp-action="DeactivatedRoleList" class="btn btn-danger btn-user btn-block">
                                Cancel
                            </a>
                        }

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
